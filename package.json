{
  "name": "lambda-typescript-template",
  "version": "1.0.0",
  "description": "AWS Lambda functions in TypeScript with AWS Powertools",
  "main": "dist/index.js",
  "scripts": {
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/ --ext .ts",
    "lint:fix": "eslint src/ --ext .ts --fix",
    "build": "vite build",
    "dev": "vite build --watch",
    "package": "npm run build && npm run package:functions",
    "package:functions": "mkdir -p build && cd dist && find . -name 'index.js' -exec bash -c 'dir=$(dirname {}); zip -j ../build/${dir//\\//-}.zip {}' \\;",
    "clean": "rm -rf build/ dist/ .vite/",
    "security:check": "npm audit"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.143",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "@vitejs/plugin-typescript": "^0.1.0"
  },
  "dependencies": {
    "@aws-lambda-powertools/logger": "^2.11.0",
    "@aws-lambda-powertools/metrics": "^2.11.0",
    "@aws-lambda-powertools/parameters": "^2.11.0",
    "@aws-lambda-powertools/tracer": "^2.11.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
